@model IEnumerable<OCR_E_gov.Models.User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="container">
        <div class="welcome">
            <img class="logo"  src="~/img/NG_Logo.png">
            <h3>Welcome to <br> Office of the Company Registrar</h3>
        </div>
        <h2>User List</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Username</td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.UserId">Edit</a>
                            </td>
                        </tr>
                }
            </tbody>
    </div>
</body>
</html>
